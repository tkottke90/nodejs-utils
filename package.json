{
  "name": "@tkottke/node-utils",
  "version": "2.0.1",
  "description": "",
  "exports": {
    ".": "./dist/index.js",
    "./numbers": "./dist/lib/number.utils.js",
    "./script": "./dist/lib/script.utils.js"
  },
  "scripts": {
    "build": "npm run lint && tsc",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint --fix src/**/*",
    "release": "git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && git push origin && git push origin --tags",
    "release:patch": "npm run build && changelog -p && npm version patch && npm run release",
    "release:minor": "npm run build && changelog -m && npm version minor && npm run release",
    "release:major": "npm run build && changelog -M && npm version major && npm run release",
    "watch": "npm run lint && tsc -w"
  },
  "bin": {},
  "engines": {
    "node": ">=16"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "generate-changelog": "^1.8.0",
    "typescript": "^4.9.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "unused-imports"
    ],
    "root": true,
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "no-debugger": "error",
      "unused-imports/no-unused-imports": "error"
    }
  }
}
